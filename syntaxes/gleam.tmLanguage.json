{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Gleam",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#constant"
    },
    {
      "include": "#entity"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.gleam",
          "match": "\\b(case|enum|external|fn|import|let|pub|type)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.gleam",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.gleam",
          "match": "\\\\."
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.gleam",
          "match": "\/\/.*"
        }
      ]
    },
    "constant": {
      "patterns": [
        {
          "name": "constant.other.gleam",
          "match": "[A-Z]+\\w*"
        },
        {
          "name": "constant.numeric.gleam",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "entity": {
      "patterns":[
        {
          "begin": "\\b([a-z]+\\w*)([[:space:]]*)?\\(",
          "end":"\\)",
          "patterns":[
            {
              "include":"$self"
            }
          ],
          "captures": {
            "1":{
              "name": "entity.name.function.gleam"
            }
          }
        },
        {
          "name":"entity.name.type.gleam",
          "match":"\\w+\\:"
        }
      ]
    }
  },
  "scopeName": "source.gleam"
}
